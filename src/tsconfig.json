{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "jsx": "react",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "types": ["vite/client"],
        "allowJs": true,
        "moduleSuffixes": [".tsx", ".jsx", ""],
        "isolatedModules": true,
    },
    "exclude": [
        "node_modules",
        "public"
    ]
}
